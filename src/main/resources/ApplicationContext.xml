<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
                        http://www.springframework.org/schema/beans/spring-beans.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context.xsd">
    
<context:annotation-config/>    
<bean id="employee" class="com.training.spring.Employee">
	<property name="empName" value="Ali"/>  <!-- Setter Injection -->
	<constructor-arg type="int" value="22"/> <!-- Constructor injection -->
	<!-- <property name = "department" ref="department"/> -->
</bean>   

<bean id="dept" class="com.training.spring.Department">
	<property name="deptName" value="Sales"/>  <!-- Setter Injection -->
	<property name="deptCode" value="101"/>
</bean>                      
</beans>                        